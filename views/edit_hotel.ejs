<%- include layouts/header.ejs %>

        <div class="page-data">
            
            <form method="post" action="/hoteles/edit/<%=data[0].idhotel%>">
                <table cellpadding="11">
                <tr>
                    <td class="label">Id_hotel</td><td>: <input type="text" name="idhotel" value="<%=data[0].idhotel%>" required></td>
                 </tr>
                 <tr>
                    <td class="label" valign="top">Nombre</td>
                    <td valign="top">: 
                        <textarea name="nombre" required cols="30" rows="5"><%=data[0].Nombre%></textarea>
                    </td>
                </tr>
                <tr>
                    <td class="label">Pais</td><td>: <input type="text" value="<%=data[0].Pais%>" name="pais" required></td>
                 </tr>
                 <tr>
                    <td class="label">Provincia</td><td>: <input type="text" value="<%=data[0].Provincia%>" name="provincia" required></td>
                 </tr>
                 <tr>
                    <td class="label">Cantón</td><td>: <input type="text" value="<%=data[0].Cantón%>" name="canton" required></td>
                 </tr>
                 <tr>
                    <td class="label">Latitud</td><td>: <input type="text" value="<%=data[0].latitud%>" name="latitud" required></td>
                 </tr>
                 <tr>
                    <td class="label">Longitud</td><td>: <input type="text" value="<%=data[0].longitud%>" name="longitud" required></td>
                 </tr>
                 <tr>
                    <td class="label"></td>
                    <td>
                        &nbsp; <input type="submit" name="submit" value="Save">
                       <input type="button" name="cancel" value="Cancel" class="cancel" onClick="cancelAdd()">
                    </td>
                 </tr>
                </table>
            </form>
            
        </div>
        
<%- include layouts/footer.ejs %>
